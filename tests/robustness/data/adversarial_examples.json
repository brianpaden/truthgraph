      "id": "adv_001",
      "base_claim": "Vaccines are effective at preventing disease",
      "expected_verdict": "SUPPORTED",
      "category": "health",
      "adversarial_variations": [
        {
          "text": "Vaccines are not ineffective at preventing disease",
          "attack_type": "double_negation",
          "challenge": "Double negation may confuse semantic understanding"
        },
        {
          "text": "While some claim vaccines prevent disease, they actually cause autism",
          "attack_type": "contradiction_injection",
          "challenge": "Conflicting information in single statement"
        },
        {
          "text": "Vaccines prevent disease in only a few people",
          "attack_type": "scope_shift",
          "challenge": "Subtle scope narrowing that inverts meaning"
        }
      ]
