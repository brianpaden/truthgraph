# TruthGraph v0 Environment Variables
# Copy this file to .env and update values as needed

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_DB=truthgraph
POSTGRES_USER=truthgraph
POSTGRES_PASSWORD=changeme_to_secure_password
POSTGRES_PORT=5432

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Database URL (constructed from above values)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://truthgraph:changeme_to_secure_password@postgres:5432/truthgraph

# ============================================================================
# Frontend Configuration
# ============================================================================

# htmx Frontend (Flask)
FRONTEND_PORT=5000
FLASK_ENV=development
FLASK_DEBUG=1

# React Frontend (optional - use --profile react to enable)
REACT_PORT=5173

# ============================================================================
# Development Settings
# ============================================================================

# Set to 1 to enable hot reload for development
ENABLE_HOT_RELOAD=1

